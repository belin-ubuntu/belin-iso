#!/bin/sh
set -e
lb config noauto --clean -d $1 --debian-installer-distribution $1 --distribution-binary $1 --distribution-chroot $1 --parent-debian-installer-distribution $1 --parent-distribution $1 --parent-distribution-chroot $1 --parent-distribution-binary $1 --apt-recommends true --apt-source true -a $2 --archive-areas "main,contrib,non-free" --backports true --bootappend-install="boot=live config components timezone=Europe/Budapest locales=hu_HU.UTF-8,en_US.UTF-8 keyboard-layouts=hu,en_US,brai debian-installer/language=hu country=hu locale=hu_HU.UTF-8 live-config.debconf-preseed=filesystem,medium speakup.synth=soft" --bootappend-live="boot=live config components timezone=Europe/Budapest locales=hu_HU.UTF-8,en_US.UTF-8 keyboard-layouts=hu,en_US,brai debian-installer/language=hu country=hu locale=hu_HU.UTF-8 live-config.debconf-preseed=filesystem,medium speakup.synth=soft" --bootloaders "grub-efi,syslinux" --build-with-chroot true --checksums "sha256 md5" --debian-installer live --debian-installer-gui true --firmware-binary true --firmware-chroot true --image-name "$3" --iso-preparer "Informatika A Látássérültekért Alapítvány" --iso-publisher "Informatika A Látássérültekért Alapítvány" --iso-application "" --iso-volume "$4" --memtest memtest86+ --parent-archive-areas "main,contrib,non-free" --quiet --security true --uefi-secure-boot auto --updates true --utc-time false --linux-packages "linux-image linux-headers" --debootstrap-options="--include=debconf-utils,openssl,ca-certificates,apt-transport-https,dirmngr,debconf-utils,apt-utils,dconf-cli" "${@}" >/dev/NULL
